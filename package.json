{
  "name": "event-karo",
  "version": "1.0.0",
  "description": "Event Karo - A modern event management platform backend using Node.js, Express, and MongoDB.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:api": "node ./postman/run-tests.js dev",
    "test:api:dev": "node ./postman/run-tests.js dev",
    "test:api:prod": "node ./postman/run-tests.js prod",
    "test:api:report": "node ./postman/run-tests.js dev",
    "docker:build": "docker build -t event-karo:latest .",
    "docker:dev": "docker compose up -d --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d --build",
    "docker:logs": "docker compose logs -f backend",
    "docker:clean": "docker compose down -v",
    "health-check": "node ./scripts/health-check.js"
  },
  "keywords": [
    "event",
    "management",
    "express",
    "mongodb",
    "nodejs",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.5",
    "multer": "^1.4.5-lts.1",
  "serverless-http": "^3.2.0",
    "stripe": "^14.21.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "newman": "^6.0.0",
    "newman-reporter-htmlextra": "^1.22.11",
    "nodemon": "^3.1.0"
  }
}
